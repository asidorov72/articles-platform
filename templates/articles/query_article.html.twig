{% extends 'base.html.twig' %}

{% block title %}Search results!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% include('navbar.html.twig') %}

    <div class="example-wrapper">
        <div class="row">
            <div class="col-md-12">
                 <h1>Search results: âœ…</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                Found articles for "{{ queryString }}": {{ articles|length }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul>
                {% for article in articles %}
                <li>
                    <div class="media text-muted pt-3">
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                           <a href="{{ path('article_show', {slug: article.slug}) }}">{{ article.title }}</a>
                            {{ article.body | slice(0, 255) ~ '...'  }}
                        </p>
                    </div>
                </li>
                {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-md btn-primary" href="{{ path('app_default') }}">Homepage</a>
            </div>
        </div>
    </div>
{% endblock %}
