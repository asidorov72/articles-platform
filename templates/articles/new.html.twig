{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {{ form_start(form) }}
    <div class="example-wrapper">
        <div class="form-control">
            <h1>Add new article! âœ…</h1>

            <div class="form-error">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col">{{ form_row(form.title) }}</div>
                <div class="col">
                   {{ form_row(form.body, { 'attr': {'rows' : '10', 'cols' : '10' }}) }}
                </div>
                <div class="col"><button class="btn btn-default" type="submit">Save</button></div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
