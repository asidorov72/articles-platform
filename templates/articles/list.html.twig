{% extends 'base.html.twig' %}

{% block title %}Articles list!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% include('navbar.html.twig') %}
<div class="example-wrapper">
    <h1>My articles! âœ…</h1>
    <p>Test articles list:</p>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}"</a>
            </li>
        {% endfor %}
    </ul>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_CONTENT_MANAGER')  %}
        <a href="{{ path('article_new') }}" class="btn btn-md btn-primary" type="submit">
            Create new Article
        </a>
    {% endif %}
</div>
{% endblock %}
