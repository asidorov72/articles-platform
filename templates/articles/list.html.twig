{% extends 'base.html.twig' %}

{% block title %}Articles list!{% endblock %}

{% block body %}
{% include('navbar.html.twig') %}
<div class="example-wrapper">
    <h1>My articles! âœ…</h1>
    <p>Test articles list:</p>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}"</a>
            </li>
        {% endfor %}
    </ul>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_CONTENT_MANAGER')  %}
        <a href="{{ path('article_new') }}" class="btn btn-lg btn-primary" type="submit">
            Create new Article
        </a>
    {% endif %}
</div>
{% endblock %}
