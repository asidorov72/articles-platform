{% extends 'base.html.twig' %}

{% block title %}{{ app.request.pathInfo == path('article_new') ? 'Create article' : 'Edit article' }}{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}
    {{ form_start(form) }}
    <div class="example-wrapper">
        <div class="form-control p-3">
            {{ form_errors(form) }}
            <h1 class="h3 mb-3 font-weight-normal">{{ app.request.pathInfo == path('article_new') ? 'Create article' : 'Edit article' }}</h1>
            <div class="row">
                <div class="col-md-12 mt-2">
                    {{ form_row(form.title) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-2">
                    {{ form_row(form.body, { 'attr': {'rows' : '10', 'cols' : '80' }}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-3">
                    <button class="btn btn-lg btn-primary" type="submit">Save</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
