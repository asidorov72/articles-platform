<nav class="navbar navbar-expand-lg navbar-dark bg-dark"><!-- navbar navbar-expand-lg navbar-dark bg-dark -->
    <a class="navbar-brand" href="{{ path('app_default') }}">Articles Platform</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item{% if (app.request.pathInfo == path('app_default')) %} active{% endif %}">
                <a class="nav-link" href="{{ path('app_default') }}">Home</a>
            </li>
            <li class="nav-item{% if (app.request.pathInfo == path('articles_list')) %} active{% endif %}">
                <a class="nav-link" href="{{ path('articles_list') }}">Articles list</a>
            </li>
        </ul>
    </div>
    <div class="navbar-right" id="navbarNavCenter">
        <form action="{{ path('articles_search') }}" method="get">
            <div class="input-group">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
        </form>
    </div>
    <div class="navbar-right" id="navbarNavRight">
        <ul class="navbar-nav">
            {% if app.user %}
                <li class="nav-item">
                    <span class="inline-block nav-link active">{{ app.user.userIdentifier }}</span>
                </li>
            {% else %}
                <li class="nav-item{% if (app.request.pathInfo == path('app_register')) %} active{% endif %}">
                    <a class="nav-link" href="{{ path('app_register') }}">Sign Up</a>
                </li>
            {% endif %}
            <li class="nav-item{% if (app.request.pathInfo == path('app_logout') or app.request.pathInfo == path('app_login')) %} active{% endif %}">
                <a class="nav-link" href="{{ app.user ? path('app_logout') : path('app_login') }}">
                    {{ app.user ? 'Logout' : 'Login' }}
                </a>
            </li>
        </ul>
    </div>
</nav>